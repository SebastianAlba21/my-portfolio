---
import Section from '@/components/Section.astro'

import { certificates } from '@cv'
---

<Section title="Certificados">
	<ul>
		{
			certificates.map(({ name, date, issuer, url }) => {
				return (
					<li>
						<article>
							<header>
								<div>
									<h3>
										<a href={url}>{name}</a>
									</h3>
								</div>

								<time>{date}</time>
							</header>

							<footer>
								<span>{issuer}</span>
							</footer>
						</article>
					</li>
				)
			})
		}
	</ul>
</Section>

<style>
	ul {
		display: flex;
		flex-direction: column;
		gap: 32px;
	}

	article h3 a {
		font-weight: 500;
		color: #111;
	}
	article h3 a:hover {
		text-decoration: underline;
	}

	header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 4px;
	}

	time {
		color: #555;
		font-size: 0.85rem;
		min-width: 102px;
	}

	@media (width <= 700px) {
		time {
			text-align: right;
		}
	}
</style>
